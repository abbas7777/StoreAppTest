<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Properties.PropertiesActivity">

    <RelativeLayout
        android:elevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imv_PropertiesActivity_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"
            android:src="@drawable/ic_baseline_close_24" />

        <TextView
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@id/imv_PropertiesActivity_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sbtn_DeatalActivity_properties"/>

        <View
            android:layout_marginBottom="1dp"
            android:background="@color/gray_200"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="0.9dp"
            />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rv_PropertiesActivity_properties"/>
</LinearLayout>