<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl">

    <TextView
        android:id="@+id/txt_itemComment_suggested"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_itemComment_unSuggested"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/txt_green_shape"
        android:drawableRight="@drawable/ic_like_vector"
        android:drawablePadding="8dp"
        android:padding="12dp"
        android:text="@string/stxt_itemComments_suggested"
        android:textColor="@color/teal_700"
        android:visibility="gone" />

    <TextView
        android:background="@drawable/txt_red_shape"
        android:id="@+id/txt_itemComment_unSuggested"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:drawableRight="@drawable/ic_disslike_vector"
        android:drawablePadding="8dp"
        android:padding="12dp"
        android:text="@string/stxt_itemComments_unsuggested"
        android:textColor="@color/red_500"
        android:visibility="visible" />


    <TextView
        android:id="@+id/txt_itemComment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_itemComment_suggested"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        android:textColor="@color/black"
        tools:text="امیر علی محمدی" />

    <TextView
        android:id="@+id/txt_itemComment_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_itemComment_title"
        android:layout_alignParentRight="true"
        android:layout_marginTop="4dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/gray_500"
        android:textSize="12dp"
        tools:text="امیر علی محمدی" />

    <TextView
        android:id="@+id/txt_itemComment_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_itemComment_userName"
        android:gravity="right"
        android:minLines="2"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/txt_itemComment_likecount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_itemComment_desc"
        android:layout_marginTop="8dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="8dp"
        android:drawableRight="@drawable/ic_like_vector"
        android:drawablePadding="8dp"
        android:textColor="@color/teal_700"
        android:textSize="14sp"
        tools:text="22" />

    <TextView
        android:id="@+id/txt_itemComment_disslikecount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_itemComment_desc"
        android:layout_marginTop="8dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="8dp"
        android:layout_toLeftOf="@id/txt_itemComment_likecount"
        android:drawableRight="@drawable/ic_disslike_vector"
        android:drawablePadding="8dp"
        android:textColor="@color/red_500"
        android:textSize="14sp"
        tools:text="22" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:layout_below="@id/txt_itemComment_disslikecount"
        android:background="@color/gray_200" />
</RelativeLayout>