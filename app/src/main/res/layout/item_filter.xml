<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_itemFilter_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="1dp"
    android:layoutDirection="rtl"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_itemFilter_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:drawableLeft="@drawable/ic_baseline_chevron_left_24"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:textColor="@color/gray_600"
        android:textSize="16sp"
        tools:text="@string/stxt_filter" />

    <TextView
        android:id="@+id/txt_itemFilter_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_itemFilter_title"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="20dp"
        android:minLines="1"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/gray_400"
        android:visibility="visible" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.9dp"
        android:layout_below="@id/txt_itemFilter_count"
        android:background="@color/gray_200" />

</RelativeLayout>