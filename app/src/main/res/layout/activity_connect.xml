<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:background="@color/white"
android:layout_height="match_parent"
tools:context=".ConnectLayout.ConnectActivity">


<ImageView
    android:id="@+id/txt_SplashSC_name"
    android:layout_marginTop="100dp"
    android:layout_width="160dp"
    android:layout_height="160dp"
    android:layout_centerHorizontal="true"
    android:fontFamily="@font/aghavan"
    android:paddingTop="4dp"
    android:src="@mipmap/ic_launcher"
    android:textColor="@color/white"
    android:textSize="47sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.498"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_reoen_regester"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_reoen_enter"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/btn_p500_shape"
        android:text="@string/btn_name_regester"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_SplashSC_name" />

    <Button
        android:id="@+id/btn_reoen_enter"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="76dp"
        android:background="@drawable/btn_p500_shape"
        android:text="@string/btn_name_enter"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_reoen_regester"
        app:layout_constraintVertical_bias="0.24" />

</RelativeLayout>